<UserControl x:Class="TrendYol.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrendYol.Views"
             Background="#a3bb5c"
             mc:Ignorable="d" 
             d:DesignHeight="780" d:DesignWidth="920">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Your Account" HorizontalAlignment="Center" FontSize="70" Foreground="#090909" Margin="40"/>
            <TextBlock Text="User Name: " FontSize="40" Margin="30,10" Foreground="#090909"/>
            <TextBlock x:Name="UserNameField" Text="{Binding UserNameInfo}" FontSize="30" Foreground="#090909" Margin="30,10"/>
            <TextBlock Text="E-mail:" FontSize="40" Margin="30,10" Foreground="#090909"/>
            <TextBlock x:Name="emailField" Text="{Binding EmailInfo}" FontSize="30" Foreground="#090909" Margin="30,10"/>
            <TextBlock Text="Position:" FontSize="40" Margin="30,10" Foreground="#090909"/>
            <TextBlock x:Name="PositionField" Text="{Binding PositionInfo}" FontSize="30" Foreground="#090909" Margin="30,10"/>
        </StackPanel>
    </Grid>
</UserControl>
